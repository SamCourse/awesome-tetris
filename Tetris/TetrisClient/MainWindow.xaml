<Window x:Class="TetrisClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="704">
    <Page>
        <Canvas Panel.ZIndex="1" HorizontalAlignment="Center" VerticalAlignment="Center"
                Height="200" Width="200">
            <Button Height="42" Width="120" Content="Singleplayer"
                    Click="Singleplayer_Click" FontFamily="Bahnschrift" Canvas.Left="40" Canvas.Top="20"
                    FontSize="16" />
            <Button Height="42" Width="120" Content="Multiplayer"
                    Click="Multiplayer_Click" FontFamily="Bahnschrift" Canvas.Left="40" Canvas.Top="79"
                    FontSize="16" />
            <Button Height="42" Width="120" Content="How to play"
                    Click="HowToButton_Click" FontFamily="Bahnschrift" Canvas.Left="40" Canvas.Top="137"
                    FontSize="16" />
        </Canvas>
    </Page>
</Window>